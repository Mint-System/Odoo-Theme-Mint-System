<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="theme_mint_system.snippet_options" inherit_id="website.snippet_options">
        <xpath expr="//div" position="after">
            
            <!-- Section Style -->
            <div id="section_style_snippet_option" data-selector=".s_text_image, .s_image_text">
                <we-collapse-area>
                    <we-toggler><i class="fa fa-fw fa-magic"/> Styles</we-toggler>
                    <we-collapse>
                        <we-button data-select-class="style-default">Default</we-button>
                        <we-button data-select-class="style-inverted">Inverted</we-button>
                    </we-collapse>
                </we-collapse-area>
            </div>

        </xpath>
    </template>

</odoo>